%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= set_title_helper
    = favicon_link_tag "favicon.png"
    = stylesheet_link_tag    "simple_view"
    = javascript_include_tag "application", 'data-turbolinks-track' => true
    = javascript_include_tag "https://cdn.rawgit.com/bootstrap-tagsinput/bootstrap-tagsinput/master/src/bootstrap-tagsinput.js", 'data-turbolinks-track' => true
    %link{:href => "https://fonts.googleapis.com/css?family=Roboto+Mono", :rel => "stylesheet"}/
    = csrf_meta_tags
    %meta{:content => "website", :property => "og:type"}/
    - if content_for?(:facebook_title)
      %meta{:content => "#{yield :facebook_title}", :property => "og:title"}/
    - else
      %meta{:content => "Sweig", :property => "og:title"}/
    - if content_for?(:facebook_description)
      %meta{:content => "#{yield :facebook_description}", :property => "og:description"}/
    - else
      %meta{:content => "LÃ¦s mere", :property => "og:description"}/
    %meta{:content => "#{image_url('logo-facebook')}", :property => "og:image"}/
  %body
    .container-fluid.form-outer
      .row
        = yield
