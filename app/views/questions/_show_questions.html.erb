<% @questions.each do |question| %>
	<% if current_user %>
		<%= link_to question_path(question), class: "questions-wrapper row" do %>
			<%= render partial: "each_question", locals: {question: question,current_user: current_user} %>
		<% end %>
	<% else %>
		<%= link_to not_logged_in_path("Hvis du gerne vil se spørgsmålets afstemning og kommentarer, skal du enten logge ind eller oprette dig.<br> Det er smertefrit og fedt."), remote: true, class: "questions-other questions-wrapper row" do %>

		<%= render partial: "each_question", locals: {question: question, current_user: current_user} %>
		<% end %>

	<% end %>
<% end %>
