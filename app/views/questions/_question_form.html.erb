<%= form_for question do |f| %>

<div class="form-group">
	<%= f.label :headline, "Overskrift:" %>		
	<%= f.text_field :headline, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.label :text, "Teksten til:" %>
	<%= f.text_area :text, placeholder: "Indtast teksten her", class: "form-control" %>
</div>
<hr>
<div class="border-image">
<%= f.submit button_text, class: "btn btn-primary" %>
</div>


<% end %>
