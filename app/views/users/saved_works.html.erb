<%= render partial: "user_navbar", locals: {user: @user} %>
<h1 class="text-center"><%= link_to_user_helper(@user, "|" + @user.username) %></h1>
<%= render partial: "foelger_bar", locals: {user: @user} %>
<hr>

<div class="col-lg-12 main">
	<% if @saved_works.any? %>
	<h2 class="user-work-header black">Gemte værker</h2>

	<div class="row user-work-wrapper">
		<% @saved_works.each do |work| %>
		<div class="col-xs-6 works-show-wrapper col-sm-4 col-md-3">
			<div class="works-show-box">
			
				<h6>Skrevet af: <%= link_to "| #{work.user.username.parameterize}", user_path(work.user) %></h6>
			<%= link_to user_work_path(work.user, work) do %>
				<p class="lead">
					<%= work.title %>
				</p>
				<span class="text-left">
					<%= simple_format( truncate(work.body, length: 80) ) %>
				</span>
			<% end %><!-- user_work_path_link -->
			</div><!-- works-show-box -->
		</div><!-- col-xs-6 -->
		<% end %><!-- works.each -->
	</div>


	<% else %>
	<h2 class="user-work-header">Gemte værker</h2>
	<p class="py-4 text-center lead user-work-wrapper">Du har ikke gemt nogle værker endnu
	<br>Brug <%= fa_icon "save" %> under læsning.
	</p>
		<% end %><!-- !@saved_works.any? -->
</div>

