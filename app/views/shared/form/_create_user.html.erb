<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<div class="form-group">
  <%= f.label :username, "Brugernavn:" %><br />
  <%= f.text_field :username, autofocus: true, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :email, "Email-adresse:" %><br />
  <%= f.email_field :email, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :password, "Kodeord:" %>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> minimum længde af kodeord)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, "Bekræft dit kodeord:" %><br />
  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
</div>


<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Luk</button>
  <%= f.submit "Opret", class: "btn btn-primary" %>
</div>
<% end %>