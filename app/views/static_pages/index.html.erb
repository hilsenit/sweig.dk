<%= provide :title, "Forside" %>
<%= image_tag "http://placehold.it/1300x450" %>

<div class="large-12 column">
 <h3 class="text-center">Vores brugere</h3>
	<% @users.each do |user| %>
		<%= link_to user_path(user) do %>
			<h5><%= user.name %></h5>
			<p>Udgivet værker: <%= user.works.length %></p>
		<% end %>
	<% end %>
</div>

<div class="large-10 large-offset-1 column">
	<% @works.each do |work| %>
		<!-- På denne måde kan man passe to parameters til et link -->
		<%= link_to user_work_path(User.find(work.user_id), work) do %>
			<div class="large-5 column float-left">
				<h6 class="text-center"><%= work.title %></h6>
				<p><%= truncate work.body, length: 150 %></p>
			</div>
		<% end %>
	<% end %>

</div>