<div class="col-sm-6 col-md-4 col-lg-3 search-result-wrapper">
  <h6>Skrevet af: <%= link_to "| #{work.user.username.parameterize}", user_path(work.user) %></h6>	
    <% unless work.all_tags_in_s.empty? %>
      <% work.all_tags_in_s.split(",").each do |tag| %>
        <small><%= tag %></small>
      <% end %>
    <% end %>
  <%= link_to user_work_path(work.user.friendly_id, work.friendly_id), class: "work-text" do %>
    <p class="lead">
      <%= work.title %>
    </p>
    <div class="text-left user-work-overview">
      <%= strip_html_work_helper work.body %>
    </div>
  <% end %><!-- user_work_path_link -->
</div>


