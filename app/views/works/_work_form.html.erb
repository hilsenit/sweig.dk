<div class="col-lg-12">
<% if @work.errors.any? %>
	<div data-alert class="alert-box secondary">
	<a href="#" class="close">&times;</a>
		<% @work.errors.full_messages.each do |error| %>
			<p class="text-center"><%= error %></p>
		<% end %>
	</div>
<% end %>
<%= form_for [@user, @work] do |f| %>

	<div class="form-save">
		<% if draft %>
		<%= f.submit "Gem som kladde", class: "btn btn-secondary" %>
		<% end %>
		<%= f.submit button_text, name: "status", class: "btn btn-primary" %>
	</div>
	
	<div class="title">
		<%= f.text_field :title %>
	</div>

	<div class="body">
		<%= f.text_area :body %>
	</div>


<% end %>
  
</div>

<script type="text/javascript">
	
	$(document).ready(function() {
		$(".body textarea").autosize();
	});
</script>