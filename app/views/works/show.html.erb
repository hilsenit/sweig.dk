<div class="col-lg-12 work-show-outer">
	<div class="show-navbar">

		<%= 
		fa_icon "angle-down", 
		id: "NavbarToggle", 
		class: "rotate180deg" 
			%>
			<div class="show-navbar-inner">

				<%= link_to "|#{@user.username.parameterize}", user_path(@user), class: "float-left exit-icon" %>
				<span class="divider float-left">|</span>

				<% if current_user %>
				<%= link_to "MIT", user_path(current_user), class: "mit-sign" %>
				<% end %>

				<span class="divider">|</span>

				<div class="social-share float-right">
					<div class="social-share-button" data-title="<%= @work.title %>" data-img="<%= image_url('logo-facebook') %>" data-url="<%= original_url_helper %>" data-desc="<%= @work.body %>" data-via="">
						<a rel="nofollow " data-site="facebook" class="social-icons ssb-icon ssb-facebook" onclick="return SocialShareButton.share(this);" title="Del med Facebook" href="#"></a>
					</div>
				</div>

				<!-- Hvis du er logget ind, og du ikke har gemt -->
				<% if user_signed_in? && !is_current_user? && !is_work_already_saved_helper?(current_user.saved_works, @work) %>
				<span class="divider">|</span>
				<%= link_to (fa_icon "save"), user_work_current_user_save_path(@user, @work, current_user), class: "float-right social-icons save-icon", title: "Gem dette værk" %>
				<!-- Hvis du er logget ind, og du har gemt -->
				<% elsif user_signed_in? && is_work_already_saved_helper?(current_user.saved_works, @work)  %>
				<span class="divider">|</span>
				<%= link_to (fa_icon "save"), user_work_delete_current_user_save_path(@user, @work, current_user), method: :delete, class: "float-right social-icons save-icon green-icon", title: "Fjern dette værk fra dine gemte" %>

				<!-- Hvis du ikke er logget ind -->
				<% else %>
				<p class="lead text-center work-show-not-logged-in-text">Opret dig eller log ind for at gemme værker</p>
				<% end %>

			</div>
		</div>
		<div class="social-share">

		</div>	

		<% if notice %>
		<div class="alert row text-center">
			<div class="offset-lg-4 col-lg-4">
				<div data-dismiss="alert" class="notice-exit float-right"><%= fa_icon "times" %></div>
				<%= notice %>
			</div>
		</div>
		<% end %>

		<div class="title">
			<h2 class="show-title"><%= @work.title %></h2>
		</div>
		<div class="body">
			<div class="show-body"><%= simple_format( @work.body ) %></div>
		</div>

	</div> 


	<script type="text/javascript">

	
		$(document).ready(function(){
			$("#NavbarToggle").click(function() {
				$(this).toggleClass('rotate180deg');
				$(this).toggleClass('rotatedefault');
				$(".show-navbar-inner").slideToggle(300);
			});
		});


	</script>



	



