<%= fa_icon "angle-down", id: "NavbarToggle", class: "#{cookies[:navbar_work] == "down" ? "rotate180deg" : "rotatedefault"}" %>

<div class="col-lg-12 work-show-outer">
	<div class="show-navbar <%= "hide-it" if cookies[:navbar_work] == "up" %>">
		<div class="show-navbar-inner">
		<%= link_to (fa_icon "times"), user_path(@user), class: "float-left social-icons" %>
		<%= fa_icon "twitter", class: "float-right social-icons" %>
		<%= fa_icon "facebook", class: "float-right social-icons" %>
		<%= fa_icon "instagram", class: "float-right social-icons" %>
		</div>
	</div>
	<div class="title">
		<h2 class="show-title"><%= @work.title %></h2>
	</div>
	<div class="body">
		<div class="show-body"><%= simple_format( @work.body ) %></div>
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function(){
		$("#NavbarToggle").click(function() {
			$(this).toggleClass('rotate180deg');
			$(this).toggleClass('rotatedefault');
			$(".show-navbar").slideToggle(300);
		});
	});
</script>