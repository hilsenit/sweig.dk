
<div class="col-lg-12">
	<div class="show-navbar <%= "hide-it" if cookies[:navbar] = "up" %>">
		<%= link_to (fa_icon "angle-down"), user_work_navbar_cookie_path(@user, @work), id: "NavbarToggle" %>
		<%= fa_icon "twitter" %>
		<%= fa_icon "facebook" %>
		<%= fa_icon "instagram" %>
	</div>
	<div class="title">
		<h2 class="show-title"><%= @work.title %></h2>
	</div>
	<div class="body">
		<div class="show-body"><%= simple_format( @work.body ) %></div>
	</div>


</div>


<script type="text/javascript">
	$(document).ready(function(){
		$("#NavbarToggle").click(function() {
			$(".show-navbar").slideToggle(300);
		});
	});
</script>